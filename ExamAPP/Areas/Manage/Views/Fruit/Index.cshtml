@model ReadFruitsManageVM
<div class="col-sm-12 col-xl-6">
    <div class="bg-secondary rounded h-100 p-4">
        <h6 class="mb-4">Basic Table</h6>

        <table class="table">
            <thead>
                <tr>

                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Subtitle</th>
                    <th scope="col">Image</th>
                    <th scope="col">CreatedAt</th>
                    <th scope="col">Actions</th>
                    <th scope="col"><a asp-action="Create" asp-controller="fruit" class="btn btn-success m-2">Create</a></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.fruits)
                {
                    <div>
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Title</td>
                        <td>@item.Subtitle</td>
                        <td>
                            <img src="~/Upload/@item.ImageUrl" style="width:50px; height:50px"></img>
                        </td>
                        <td>@item.CreatedAt</td>
                        <td>
                            <a asp-action="Update" asp-controller="fruit" asp-route-id="@item.Id" class="btn btn-warning m-2">Update</a>
                            <a asp-action="Delete" asp-controller="fruit" asp-route-id="@item.Id" class="btn btn-danger m-2">Delete</a>
                        </td>

                    </tr>
        </div>

                }
                <div class="alert alert-primary" role="alert">
                    @TempData["error"]
                </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
            </tbody>
        </table>
    </div>
    
</div>